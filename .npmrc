# NPM 配置檔案 - 解決 Grafana Plugin 依賴問題

# 使用 legacy peer deps 解析方式
legacy-peer-deps=true

# 自動安裝 peer dependencies
auto-install-peers=true

# 設置 NPM 註冊表（如果需要）
registry=https://registry.npmjs.org/

# 啟用 package-lock.json
package-lock=true

# 設置日誌級別
loglevel=warn

# 設置引擎嚴格性
engine-strict=false

# 設置 audit 行為
audit=false

# 設置 fund 提示
fund=false